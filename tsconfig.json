{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "types",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ]
}
